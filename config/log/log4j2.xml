        <RollingFile name="eventos" fileName="log/Replicador.log" filePattern="log/Replicador-%d{yyyy-MM-dd}.log">
            <MarkerFilter marker="JSON" onMatch="DENY" onMismatch="ACCEPT"/>
            <PatternLayout><!--Patron: Configuración de Hora, Hilo, Nivel de logeo, lloger36= muestrame la clase limita a 36 caracteres, mensaje-->
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies><!--Son Se colocan las politicas/reglas del archivo, como el tamaño, cada cuanto tiempo se escribira en el archivo-->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers><!--Tiene un conjunto de reglas para el nivel de logeo: -->
        <Root level="ALL"><!--Logeo root quiero todos, para no querer ninguno es decir OFF seria NONE-->
            <AppenderRef ref="eventos"/><!--Que archivos quiere tomar en cuenta para aplicar estas configuraciones-->
<!--            <AppenderRef ref="JSON"/>-->
        </Root>
    </Loggers>

</Configuration>